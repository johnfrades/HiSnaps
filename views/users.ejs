<% include partials/header %>



<div class="container" id="mainContainer">

  <div class="jumbotron text-center" id="jumbotronHeader">
    <h1 id="theHeader" style="font-family: 'Carrois Gothic SC'">Snaps</h1>
    <% if(currentUser){ %>
    <button data-toggle="modal" data-target="#addModal" class="ui linkedin button massive" id="new-pic-button" >
		  <i id="cameraIcon" class="fa fa-camera-retro " aria-hidden="true"></i>
	     Snap a picture
	</button>
	<% } else { %>
	
	  <% } %>
  </div>







<div class="row container" style="display: flex; flex-wrap: wrap">
<!-- <ul class="nav nav-tabs" id="myNavs">
  <li class="freshNav" id="freshNav" role="presentation"><a href="#">Fresh</a></li>
  <li class="hotNav" role="presentation"><a href="#">Hot</a></li>
  <li class="leastNav" role="presentation"><a href="#">Least Comments</a></li>
</ul> -->
<% allUsers.forEach(function(newUsers){ %>
<div class="col-md-12 snappImage text-center">
 <div class="ui card">

  <div class="image">
    <img src="<%= newUsers.image %>">
  </div>
    <div class="content divContent">
      <span class="right floated">
        <a href="/index/<%= newUsers._id %>" class="ui medium basic blue button">View Snap</a>
      </span>
      <span class="left floated">
        <button class="positive ui button">
          <%= newUsers.comments.length %> Comments
        </button>
      </span>
       <span class="authorImageName">
        <img class="ui avatar image" src="<%= newUsers.author.image %>">
        <%= newUsers.author.username %>
       </span> 
    </div>
  </div>
</div>




 
</div> 

<% }); %>
</div>





<!--ADD FORM Modal//Bootstrap 3 -->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Submit a picture</h4>
      </div>
      <div class="modal-body">
      <!--Modal text body starts here-->
        <% if(currentUser){ %>
        <form action="/profile/<%= currentUser._id %>" method="POST" id="loginform">
          <label>Name</label>
            <input type="text" name="name" class="form-control" id="newNameForm" required>
          <label>Image URL</label>
            <input type="text" name="image" class="form-control" id="newImageForm" required>
          <label>Description</label>
            <input type="text" name="description" class="form-control" id="newImageForm" maxlength="100" required>
      <!--Modal text body ends here-->
      </div>
      <div class="modal-footer">
          <button class="ui inverted green button">Add</button>
        </form>
        <% } %>
      <button type="button" class="ui inverted red button" data-dismiss="modal">Close</button>
        
      </div>
    </div>
  </div>
</div>





<% include partials/footer %>








