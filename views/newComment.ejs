<% include partials/header %>

<div class="container" id="commentForm">
<div class="container" id="newForm2">
<h1>Submit a new comment</h1>

 <form action="/index/<%= userID._id %>/comments" method="POST">
		<div class="form-group">
			<label class="control-label">Add a comment</label>
				<div>
					<input type="text" name="comment[name]" class="form-control" id="newCommentName" placeholder="your name..." required>
				</div>
				<div>
					<input type="text" name="comment[text]" class="form-control" id="newComment" placeholder="your comment..." required>
				</div>
				<div>
					<input type="text" name="comment[date]" class="form-control" id="newComment" value="<%= nowDateAndTime %>" required>
				</div>
		</div>
				<div class="form-group">
					<button id="buttonSubmit" class="ui inverted green button">Submit</button>
				</div>
</form>
		<a href="/index/<%= userID._id %>" class="ui inverted red button">Go Back</a>
</div>

</div>

<% include partials/footer %>