<% include partials/header %>

<div class="container" id="newForm">

<h1>Edit your comment</h1>

 <form action="/index/<%= userID %>/comments/<%= theComment._id %>?_method=PUT" method="POST">
		<div class="form-group">
			<label class="control-label"></label>
				<div>
					<input type="text" name="comment[text]" class="form-control" value="<%= theComment.text %>" required>
				</div>
				<div>
					<input type="text" name="comment[date]" class="form-control" value="<%= nowDateAndTime %>" disabled="true" required>
				</div>
		</div>
				<div class="form-group">
					<button class="fluid ui inverted green button">Submit</button>
				</div>
</form>
		<a href="/index/<%= userID %>" class="fluid ui inverted red button">Go Back</a>
</div>



<% include partials/footer %>